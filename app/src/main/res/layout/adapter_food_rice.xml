<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="160dp"
    android:layout_height="210dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/iv_food"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_korean_food"/>

        <ImageButton
            android:id="@+id/ib_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/ic_like_n"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"/>
        <ImageButton
            android:id="@+id/ib_share"
            android:src="@drawable/ic_share_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:layout_marginTop="70dp"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_store_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="만성한정식"
        android:textSize="18dp"/>


    <TextView
        android:id="@+id/tv_main_menu"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="한정식 한상차림(4인상차림, 6인상차림)"
        android:textSize="15dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/iv_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_map_small"
            android:layout_marginTop="5dp"
            android:paddingRight="3dp"/>


        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전주시 덕진구 백제로"
            android:textSize="15dp"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>