<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_profile_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공유하기"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/brown"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">
            <ImageButton
                android:id="@+id/ib_push"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_kakao"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tv_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카카오톡\n공유"
                android:gravity="center"
                android:textSize="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">
            <ImageButton
                android:id="@+id/ib_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_fb"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tv_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="페이스북\n공유"
                android:gravity="center"
                android:textSize="12dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">
            <ImageButton
                android:id="@+id/ib_vibrator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_weblink"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tv_vibe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="링크복사"
                android:gravity="center"
                android:textSize="12dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>